<Configuration>
	<Properties>
		<!-- <Property name="stdfilename">/srv/www/recipeorganizer/logs/recipeorganizer.log</Property> -->
		<!-- <Property name="errfilename">/srv/www/recipeorganizer/logs/recipeorganizer.error.log</Property> -->
		<!-- <Property name="stdfilename">${bundle:filedir:file.directory.logs}recipeorganizer.log</Property> -->
		<!-- <Property name="errfilename">${bundle:filedir:file.directory.logs}recipeorganizer.error.log</Property> -->
		<Property name="stdfilename">C:/recipeorganizer/logs/recipeorganizer.log</Property>
		<Property name="errfilename">C:/recipeorganizer/logs/recipeorganizer.error.log</Property>
		<!-- <Property name="stdfilename">G:/recipeorganizer/logs/recipeorganizer.log</Property> -->
		<!-- <Property name="errfilename">G:/recipeorganizer/logs/recipeorganizer.error.log</Property> -->
	</Properties>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5p: %c - %m%n"/>			
		</Console>
		<RollingFile name="stdLog" fileName="${stdfilename}" ignoreExceptions="false" filePattern="${stdfilename}.%i.log">
			<PatternLayout pattern="%d{DEFAULT} %-5p: %c - %m%n"/>
			<Policies>
				<SizeBasedTriggeringPolicy size="10000KB"/>
			</Policies>
		</RollingFile>
		<RollingFile name="errLog" fileName="${errfilename}" ignoreExceptions="false" filePattern="${errfilename}.%i.log">
			<PatternLayout pattern="%d{DEFAULT} %-5p: %c - %m%n"/>
			<ThresholdFilter level="error" onMatch="accept" onMismatch="deny"/>
			<Policies>
				<SizeBasedTriggeringPolicy size="10000KB"/>
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="warn">
			<AppenderRef ref="console"/>
			<AppenderRef ref="stdLog"/>
			<AppenderRef ref="errLog"/>
		</Root>
		<Logger name="net.kear.recipeorganizer" level="debug"/>
		<Logger name="org.springframework" level="warn"/>
		<logger name="org.springframework.web" level="warn"/>
		<!-- <logger name="org.springframework.web.context" level="warn"/> -->
		<!-- <logger name="org.springframework.web.servlet" level="warn"/> -->
		<Logger name="org.springframework.webflow" level="warn"/>
		<logger name="org.springframework.security" level="warn"/>
		<logger name="org.hibernate" level="warn"/>
		<logger name="org.hibernate.type" level="warn"/>
		<logger name="net.sf.jasperreports.engine" level="warn"/>
		<logger name="org.apache.logging" level="warn"/>
		<logger name="java.util" level="warn"/>
		<logger name="javax.servlet" level="warn"/>
		<logger name="javax.mail" level="warn"/>
		<logger name="com.sun.mail.smtp" level="warn"/>
	</Loggers>
</Configuration>

